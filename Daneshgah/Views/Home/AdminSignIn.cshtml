@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}

<div class="text-right  col-10 jumbotron shadow-lg box-signInLogin">
    <h2 class="text-highweight">ثبت نام ادمین</h2>
    <form method="post">
        <a asp-controller="Home" asp-action="UserSignIn" class="nav-link text-dark alert alert-indigo text-muted fontface" style="float: left">ثبت نام کاربر</a>
        <div asp-validation-summary="ModelOnly" class=""></div>
        <span class="text-danger"> @ViewData["DuplicateError"]</span>
        <div class="form-group">
            <label asp-for="Name" class="">نام</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Family" class="">نام خانوادگی</label>
            <input asp-for="Family" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="Family"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Password" class="">رمز عبور</label>
            <input asp-for="Password" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="form-group ">
            <label asp-for="Email" class="">ایمیل</label>
            <input asp-for="Email" type="text" class="form-control" />
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="form-group ">
            <label asp-for="BirthDate" class="">سال تولد</label>
            <input id="birthdate" onchange="CheckDate(this.value)" asp-for="BirthDate" type="number" class="form-control" />
            <span class="text-danger" asp-validation-for="BirthDate"></span>
        </div>

        <button type="submit" class="btn btn-primary">ثبت نام</button>
        <a asp-controller="Home" asp-action="AdminLogin" class="nav-link text-dark alert alert-success text-muted fontface" style="float: left">حساب دارید؟ ورود</a>
    </form>
</div>


@section scripts{

<script>
    function CheckDate(value) {

        if (value > 1400) {
            document.getElementById("birthdate").value=1400;
        }
        else if (value < 1300) {
            document.getElementById("birthdate").value=1300;
        }

    }
</script>

}
